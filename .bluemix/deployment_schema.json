{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "'What is for dinner' Toolchain Deployment to Bluemix",
    "description": "'What is for dinner' toolchain",
    "longDescription": "Information entered here will be used at deployment time.",
    "type": "object",
    "properties": {
        "deploy-region": {
            "description": "Deploy to this Bluemix Region",
            "type": "string"
        },
        "deploy-organization": {
            "description": "Deploy to this Bluemix Organization",
            "type": "string"
        },
        "deploy-space": {
            "description": "Deploy to this space",
            "type": "string"
        },
        "route-domain": {
            "description": "Domain name. Example: mybluemix.net for runtimes in US-South",
            "type": "string"
        },
        "menu-endpoint": {
            "description": "Hostname for the app. Example: mymenu",
            "type": "string"
        },
        "menu-apis-endpoint": {
            "description": "Hostname for the APIs. Example: menu-apis",
            "type": "string"
        },
        "branch": {
            "description": "Branch to build from. Example: master",
            "type": "string"
        },
        "unique-identifier": {
            "description": "Unique identifier for your apps. Example: your surname",
            "type": "string"
        }
    },
    "required": ["deploy-region", "deploy-organization", "deploy-space", "menu-endpoint", "menu-apis-endpoint", "route-domain", "branch", "unique-identifier"],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Domain name for all routes",
            "key": "route-domain"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Hostname for your app",
            "key": "menu-endpoint"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Endpoint for your APIs",
            "key": "menu-apis-endpoint"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Branch to build from",
            "key": "branch"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Unique Identifier",
            "key": "unique-identifier"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": ["15%", "28%", "28%", "28%"],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": "Region"
                },
                {
                    "type": "label",
                    "title": "Organization"
                },
                {
                    "type": "label",
                    "title": "Space"
                },
                {
                    "type": "label",
                    "title": "Deploy to"
                },
                {
                    "type": "select",
                    "key": "deploy-region"
                },
                {
                    "type": "select",
                    "key": "deploy-organization"
                },
                {
                    "type": "select",
                    "key": "deploy-space",
                    "readonly": false
                }
            ]
        }
    ]
}
